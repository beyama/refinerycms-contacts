<%= form_for @contact, :url => form_url, :html => {:id => 'contact-form'} do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @contact,
          :include_object_name => true
        } %>
  
	<% style  = @contact.is_organisation ? 'display:hidden;' : '' %>
	
	<div class="field is_organisation">
    <%= f.label :is_organisation -%>
    <%= f.check_box :is_organisation -%>
  </div>
  
  <div class="field">
    <%= organisation_context_label(f, :organisation) -%>
    <%= f.text_field :organisation, :class => 'larger widest' -%>
  </div>
	
  <div class="field">
    <%= f.label :first_name -%>
    <%= f.text_field :first_name -%>
  </div>
	
	<div class="field">
    <%= f.label :last_name -%>
    <%= f.text_field :last_name -%>
  </div>
  
  <div class="field">
    <%= f.label :middle_name -%>
    <%= f.text_field :middle_name -%>
  </div>
	
	<div class="field only-natural-person" style="<%= style %>">
    <%= f.label :birthday -%>
    <%= f.date_select :birthday, :include_blank => true -%>
  </div>
	
	<div class="field">
    <%= organisation_context_label(f, :job_title) -%>
    <%= f.text_field :job_title -%>
  </div>
  
  <div class="field">
    <%= f.label :address -%>
    <%= f.text_area :address, :rows => 3, :cols => 40 -%>
  </div>
  
  <div class="field">
    <%= f.label :zip -%>
    <%= f.text_field :zip -%>
  </div>
  
  <div class="field">
    <%= f.label :city -%>
    <%= f.text_field :city -%>
  </div>
  
  <div class="field">
    <%= f.label :country -%>
    <%= f.text_field :country -%>
  </div>
  
	<div class="field">
    <%= f.label :phone -%>
    <%= f.text_field :phone -%>
  </div>
  
  <div class="field">
    <%= f.label :mobile -%>
    <%= f.text_field :mobile -%>
  </div>
  
  <div class="field">
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>
  
  <div class="field">
    <%= f.label :website -%>
    <%= f.text_field :website -%>
  </div>
	
	<% if Contact.taggable? %>
		<div class="field">
	    <%= f.label :tag_list, "Tags" -%>
	    <%= f.text_field :tag_list, :class => 'larger' -%>
    </div>
	<% end %>
	
  <div class="field">
    <%= f.label :avatar -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :avatar_id,
          :image => @contact.avatar,
          :thumbnail => 'small',
          :toggle_image_display => false
        } %>
  </div>
  
  <div class="field">
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:background].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to part.to_s.titleize, "##{part}" %>
          </li>
        <% end %>
      </ul>

      <div id="page_part_editors">
        <% [:background].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <%
    opts = {
      :f => f, :continue_editing => false, :delete_title => t('delete', :scope => 'admin.contacts.contact'),
      :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @contact.first_name),
      :cancel_url => admin_contacts_path
    }
    opts[:delete_url] = admin_contact_path(@contact) unless @contact.new_record?
  %>
  <%= render :partial => "/shared/admin/form_actions", :locals => opts %>
<% end -%>